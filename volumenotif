# !/bin/bash

send_msg(){
	vol=$(pulsemixer --get-volume | cut -c 1-3)
	if [ $vol -lt 100 ]
	then
		vol=$(pulsemixer --get-volume | cut -c 1-2)
	fi
	dunstify -u low -r 9998 "Volume : $vol%" -t 5000 -i /home/kazuya/Pictures/FontAwesomeIcons/volume.png
}

case $1 in
up)
	pulsemixer --change-volume +5
	send_msg
	;;
down)
	pulsemixer --change-volume -5
	send_msg
	;;
mute)
	pulsemixer --toggle-mute
	send_msg
	;;
esac
